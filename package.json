{
  "name": "starter-kit-2021",
  "version": "0.1.0",
  "description": "torchiba's npm-script starter kit",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:torchiba/starter-kit-2021.git"
  },
  "prettier": {},
  "scripts": {
    "clean/html": "rimraf dist/**/*.html",
    "clean/css": "rimraf dist/assets/css && mkdir -p dist/assets/css",
    "clean/js": "rimraf dist/assets/js && mkdir -p dist/assets/js",
    "clean/images": "rimraf dist/assets/images && mkdir -p dist/assets/images",
    "html/plain": "cpx 'src/assets/ejs/**/*.html' 'dist/'",
    "html/ejscli": "ejs-cli --base-dir src/assets/ejs '**/*.ejs' --out dist",
    "html": "npm-run-all html/*",
    "css/format": "stylelint --fix src/**/*.scss",
    "css/scss": "node-sass src/assets/scss/style.scss -o dist/assets/css --output-style expanded",
    "css/postcss": "postcss dist/assets/css/style.css -o dist/assets/css/style.min.css",
    "css/plaincss": "cpx 'src/assets/scss/**/*.css' 'dist/assets/css/'",
    "css": "npm run clean/css && npm-run-all -s css/*",
    "js/ts": "npx tsc",
    "js/prettier": "prettier-eslint --write 'src/**/*.ts'",
    "js/rollup": "rollup -c=rollup.config.js",
    "js": "npm run clean/js && npm-run-all -s js/*",
    "images/imagemin": "node imagemin.js",
    "images": "npm run clean/images && npm-run-all -s images/*",
    "watch/server": "browser-sync start -s dist -f 'src, **/*.html, !node_modules/**/*'",
    "watch/html": "watch 'npm run html' ./src/assets/ejs",
    "watch/css": "watch 'npm run css' ./src/assets/scss",
    "watch/js": "watch 'npm run js' ./src/assets/js",
    "watch/images": "onchange 'src/assets/images' -e '**/*.DS_Store' -- npm run images",
    "watch": "npm-run-all -p watch/*"
  },
  "author": "torchiba <account@torch-design.work> (https://github.com/torchiba/)",
  "license": "ISC",
  "$comment": [
    "----------------------------------------------------------",
    "MEMO（何か覚書あればここに）",
    "----------------------------------------------------------",
    "https://qiita.com/takeshisakuma/items/dbbb1c465099e6e4dd2e <=ここ参考にnpm script再構築しているよ"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "cpx": "^1.5.0",
    "cssnano": "^5.0.2",
    "ejs-cli": "^2.2.1",
    "eslint-config-google": "^0.14.0",
    "imagemin": "^8.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "patch-package": "^6.4.7",
    "postcss": "^8.2.14",
    "postcss-cli": "^8.3.1",
    "postcss-html": "^0.36.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "prettier-stylelint": "^0.4.2",
    "prettier-stylelint-formatter": "^0.5.1-beta.2",
    "rollup": "^2.47.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "typescript": "^4.4.3",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "viewport-units-buggyfill": "^0.6.2"
  }
}
